  "item": [
    {
      "name": "Package Management",
      "item": [
        {
          "name": "Get All Packages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/packages?package_type={{packageType}}&class_id={{classId}}&stream_id={{streamId}}&subject_id={{subjectId}}&is_active={{isActive}}&min_price={{minPrice}}&max_price={{maxPrice}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "packages"
              ],
              "query": [
                {
                  "key": "package_type",
                  "value": "{{packageType}}",
                  "description": "Filter by package type (class, subject, stream, test_series, chapter)"
                },
                {
                  "key": "class_id",
                  "value": "{{classId}}",
                  "description": "Filter by class ID"
                },
                {
                  "key": "stream_id",
                  "value": "{{streamId}}",
                  "description": "Filter by stream ID"
                },
                {
                  "key": "subject_id",
                  "value": "{{subjectId}}",
                  "description": "Filter by subject ID"
                },
                {
                  "key": "is_active",
                  "value": "{{isActive}}",
                  "description": "Filter by active status (true/false)"
                },
                {
                  "key": "min_price",
                  "value": "{{minPrice}}",
                  "description": "Minimum price filter"
                },
                {
                  "key": "max_price",
                  "value": "{{maxPrice}}",
                  "description": "Maximum price filter"
                }
              ]
            },
            "description": "Retrieve all packages with optional filtering"
          },
          "response": []
        },
        {
          "name": "Get Package by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/packages/{{packageId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "packages",
                "{{packageId}}"
              ]
            },
            "description": "Retrieve a specific package by its ID"
          },
          "response": []
        },
        {
          "name": "Create Package",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"package_name\": \"Class 11 Physics\",\n  \"package_type\": \"subject\",\n  \"description\": \"Complete Physics course for Class 11\",\n  \"price\": 1999,\n  \"duration_months\": 12,\n  \"class_id\": 1,\n  \"stream_id\": 2,\n  \"subject_id\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/packages",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "packages"
              ]
            },
            "description": "Create a new package. Note: Required fields vary by package_type:\n- class: class_id\n- stream: class_id, stream_id\n- subject: class_id, stream_id, subject_id\n- test_series: none\n- chapter: class_id, stream_id, subject_id, chapter_id"
          },
          "response": []
        },
        {
          "name": "Update Package",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 2499,\n  \"description\": \"Updated Physics course with additional content\",\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/packages/{{packageId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "packages",
                "{{packageId}}"
              ]
            },
            "description": "Update an existing package"
          },
          "response": []
        },
        {
          "name": "Delete Package",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/packages/{{packageId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "packages",
                "{{packageId}}"
              ]
            },
            "description": "Soft delete a package (sets is_active to false)"
          },
          "response": []
        },
